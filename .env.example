# Telegram
TELEGRAM_BOT_TOKEN=123456789:AAExampleTelegramToken
ALLOWED_USER_IDS=123456789,987654321

# Temp files
TMP_DIR=tmp
FFMPEG_PATH=ffmpeg
AUDIO_SPEED=1.2

# Speech-to-text (OpenAI-compatible)
STT_API_URL=https://foundation-models.api.cloud.ru/v1/audio/transcriptions
STT_API_KEY=sk-example-stt-key
STT_MODEL=openai/whisper-large-v3
STT_RESPONSE_FORMAT=text
STT_TEMPERATURE=0.5
STT_LANGUAGE=ru
STT_TIMEOUT_MS=120000

# Post-processing (OpenAI-compatible)
POSTPROCESS_ENABLED=true
LLM_API_URL=https://api.openai.com/v1/chat/completions
LLM_API_KEY=sk-example-llm-key
LLM_MODEL=gpt-4o-mini
LLM_TEMPERATURE=0.2
LLM_TIMEOUT_MS=120000
